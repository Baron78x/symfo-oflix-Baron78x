{% extends 'base.html.twig' %}

{% block title %}Liste des films{% endblock %}

{% block body %}
    <h1>Liste des films</h1>

    <a href="{{ path('app_back_movie_new') }}" class="btn btn-primary mb-2">Ajouter un film</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Date de sortie</th>
                <th>Dur√©e</th>
                <th>Affiche</th>
                <th>Type</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('d-M-Y') : '' }}</td>
                <td>{{ movie.duration }} min</td>
                <td><img src="{{ movie.poster }}" height="40"></td>
                <td>{{ movie.type }}</td>
                <td>{{ movie.rating }}</td>
                <td>
                    <a href="{{ path('app_back_movie_show', {'id': movie.id}) }}">show</a>
                    <a href="{{ path('app_back_movie_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
